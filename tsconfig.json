{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "typeRoots": [
      "./src/types"
   ],
    "paths": {
      "*": ["src/*"],
      "utils": ["src/utils"],
      "services": ["src/services"],
      "screens": ["src/screens"],
      "navigation": ["src/navigation"],
      "redux_manager": ["src/redux_manager"],
      "components": ["src/components"],
      "assets": ["src/assets"],
      // "types": ["src/types"],
      "device": ["src/device"],
      // "provider": ["src/provider"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["svg.d.ts", "src", "global.d.ts", "react-native-col.d.ts"]
}
